<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="wrap_content"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="none"
    tools:context=".ui.timetables.lessons.CreateLesson">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:scrollbarStyle="outsideInset">

        <EditText
            android:id="@+id/et_timeIndex"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:ems="10"
            android:focusedByDefault="true"
            android:hint="Номер урока по времени"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_lessonNumber"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:ems="10"
            android:hint="Номер урока"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_cab"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:ems="10"
            android:hint="Кабинет"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_dayNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Номер дня"
            android:inputType="number" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/et_text"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:hint="Урок">

            <!--this is the actual edit text which takes the input-->
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine|textAutoCorrect|textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rb_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="урок" />

            <RadioButton
                android:id="@+id/rb_electiv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="электив" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button" />

        </RadioGroup>

    </LinearLayout>
</ScrollView>